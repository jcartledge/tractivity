body
  padding: 50px
  font: 14px Helvetica, Arial, sans-serif

a
  display: block
  color: #00B7FF
  font-size: 40px
  font-weight: bold
  text-decoration: none
  padding: 0.3em
  text-shadow: white 1px 1px
  &:hover
    background-color: #DEF
time
  display: block
  text-align: right
  font-size: 14px
  color: silver
  margin: 1em
  font-weight: bold
.item
  margin: 0
  list-style-type: none
  border-bottom: 1px solid #EEE
  &:first-child
    border-top: 1px solid #EEE
